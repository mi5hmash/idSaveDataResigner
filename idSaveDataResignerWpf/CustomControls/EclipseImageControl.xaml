<UserControl x:Class="idSaveDataResignerWpf.CustomControls.EclipseImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:s="clr-namespace:System;assembly=System.Runtime"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             x:Name="Root">
    <UserControl.Resources>
        <s:String x:Key="OuterImageBase64"></s:String>
        <Style x:Key="CenteredRectStyle" TargetType="Rectangle">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <s:Double x:Key="OuterSize">56</s:Double>
        <s:Double x:Key="InnerSize">36</s:Double>
        <s:Double x:Key="InnerFillSize">32</s:Double>
    </UserControl.Resources>
    <Grid
        Visibility="{Binding ShouldBeVisible, ElementName=Root, Converter={StaticResource BooleanToVisibilityConverter}}">
        <Rectangle
            Style="{StaticResource CenteredRectStyle}"
            Height="{StaticResource OuterSize}"
            Width="{StaticResource OuterSize}"
            Fill="{Binding AccentBrush, ElementName=Root}">
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="{Binding Source={StaticResource OuterImageBase64}, Converter={StaticResource Base64ToImageConverter}}"
                            Stretch="Fill"
                            AlignmentX="Center"
                            AlignmentY="Center"/>
            </Rectangle.OpacityMask>
        </Rectangle>
        <Rectangle
            Style="{StaticResource CenteredRectStyle}"
            Height="{StaticResource InnerSize}"
            Width="{StaticResource InnerSize}"
            RadiusX="{Binding CornerRadius, ElementName=Root}"
            RadiusY="{Binding CornerRadius, ElementName=Root}"
            StrokeThickness="4"
            Stroke="{Binding AccentBrush, ElementName=Root}">
            <Rectangle.Effect>
                <BlurEffect KernelType="Gaussian" RenderingBias="Performance" Radius="6"/>
            </Rectangle.Effect>
        </Rectangle>
        <Rectangle
            Style="{StaticResource CenteredRectStyle}"
            Height="{StaticResource InnerSize}"
            Width="{StaticResource InnerSize}"
            RadiusX="{Binding CornerRadius, ElementName=Root}"
            RadiusY="{Binding CornerRadius, ElementName=Root}"
            StrokeThickness="3"
            Stroke="{Binding AccentBrush, ElementName=Root}"/>
        <Rectangle
            Style="{StaticResource CenteredRectStyle}"
            Height="{StaticResource InnerFillSize}"
            Width="{StaticResource InnerFillSize}"
            RadiusX="{Binding CornerRadius, ElementName=Root}"
            RadiusY="{Binding CornerRadius, ElementName=Root}"
            ToolTip="{Binding ImageToolTip, ElementName=Root}"
            Cursor="Hand">
            <Rectangle.Fill>
                <ImageBrush ImageSource="{Binding Base64InnerImage, ElementName=Root, Converter={StaticResource Base64ToImageConverter}}" />
            </Rectangle.Fill>
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="MouseLeftButtonUp">
                    <b:InvokeCommandAction Command="{Binding InnerClickCommand, ElementName=Root}" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </Rectangle>
    </Grid>
</UserControl>